generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

enum Role {
    USER
    ADMIN
}

model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String?
    access_token      String?
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String?
    session_state     String?

    user User @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    password      String?
    role          Role      @default(USER)
    accounts      Account[]
    sessions      Session[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model WhatsAppSession {
    id                       String    @id @default(cuid())
    sessionName              String    @unique
    isLoggedIn               Boolean   @default(false)
    activeListeningGroups    String?   @default("[]")
    firstAnalyzedMessageDate DateTime?
    lastAnalyzedMessageDate  DateTime?
    lastProcessedMessageId   String?   // Track the last processed message ID to prevent duplicates
    lastUpdated              DateTime  @default(now())
    createdAt                DateTime  @default(now())
}

model ApiKeys {
    id                String   @id @default(cuid())
    googleSheetId     String?  @unique
    openaiKey         String?
    googleClientEmail String?  // Google Service Account client email
    googlePrivateKey  String?  // Google Service Account private key
    createdAt         DateTime @default(now())
    updatedAt         DateTime @updatedAt
}

model SheetFields {
    id          String   @id @default(cuid())
    fieldName   String   @unique
    fieldType   String   // e.g., "text", "number", "date", "boolean", "enum"
    isRequired  Boolean  @default(false)
    order       Int      @default(0)
    description String?
    enumValues  String?  // JSON string for enum fields
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
}